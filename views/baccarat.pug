extends layout

block content
  .table-shell
    header.hero
      .hero-text
        h1 Baccarat Live Table
        p Track live cards and betting activity.
      .hero-status
        .status-card
          span.label Round
          strong#roundCount 0
        .status-card
          span.label Cards Left
          strong#shoeCount 0
        .status-card
          span.label Betting Timer
          strong#betTimer -

    main.grid
      section.table-panel
        .table-header
          .table-title
            h2 Table
            span.round-tag Current Round
            strong#roundOnTable 0
        .table-hands
          .hand
            .hand-header
              h3 PLAYER
              span.total Total
              strong#playerTotal 0
            .cards
              img.card-img#cardP1(src='/cards/empty.svg', alt='Player card 1')
              img.card-img#cardP2(src='/cards/empty.svg', alt='Player card 2')
              img.card-img#cardP3(src='/cards/empty.svg', alt='Player card 3')
          .hand
            .hand-header
              h3 BANKER
              span.total Total
              strong#bankerTotal 0
            .cards
              img.card-img#cardB1(src='/cards/empty.svg', alt='Banker card 1')
              img.card-img#cardB2(src='/cards/empty.svg', alt='Banker card 2')
              img.card-img#cardB3(src='/cards/empty.svg', alt='Banker card 3')
        .result-orb
          span#lastOutcome.label Result
          strong#lastOutcomeValue -

      aside.control-panel
        h2 Account
        p#userStatus.note Login required
        .controls
          a#loginLink.btn.btn-ghost(href='/auth/login') Login
          a#registerLink.btn.btn-ghost(href='/auth/register') Register
          a#logoutLink.btn.btn-ghost(href='/auth/logout') Logout
        hr
        h2 Betting Summary
        p.note Summary of bets for the current round.
        .bet-totals
          .bet-card
            span.label PLAYER Wins
            strong#outcomePlayerCount 0
          .bet-card
            span.label BANKER Wins
            strong#outcomeBankerCount 0
          .bet-card
            span.label TIE
            strong#outcomeTieCount 0
        .bet-totals
          .bet-card
            span.label PLAYER
            strong#betPlayerTotal 0
          .bet-card
            span.label BANKER
            strong#betBankerTotal 0
          .bet-card
            span.label TIE
            strong#betTieTotal 0
        form#betForm.bet-form
          h3 Place a Bet
          .control-row
            span.card-label Side
            select#betSide.card-select
              option(value='player') PLAYER
              option(value='banker') BANKER
              option(value='tie') TIE
          .control-row
            span.card-label Amount
            input#betAmount.bet-input(type='number', min='1', step='1', placeholder='e.g. 50000')
          .controls
            button#betSubmit.btn.btn-primary(type='submit') Place Bet
            span#betStatus.note
        .audit
          h3 Bet Details
          ul#betList
        .audit
          h3 Participant Points
          ul#participantList

  script(src='/javascripts/baccarat-view.js')
