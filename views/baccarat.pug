extends layout

block content
  .table-shell
    header.hero
      .hero-text
        h1 Baccarat Live Table
        p 실시간 카드와 베팅 현황을 확인하세요.
      .hero-status
        .status-card
          span.label 라운드
          strong#roundCount 0
        .status-card
          span.label 남은 카드
          strong#shoeCount 0

    main.grid
      section.table-panel
        .table-header
          .table-title
            h2 테이블
            span.round-tag 현재 라운드
            strong#roundOnTable 0
        .table-hands
          .hand
            .hand-header
              h3 PLAYER
              span.total 합계
              strong#playerTotal 0
            .cards
              img.card-img#cardP1(src='/cards/empty.svg', alt='Player card 1')
              img.card-img#cardP2(src='/cards/empty.svg', alt='Player card 2')
              img.card-img#cardP3(src='/cards/empty.svg', alt='Player card 3')
          .hand
            .hand-header
              h3 BANKER
              span.total 합계
              strong#bankerTotal 0
            .cards
              img.card-img#cardB1(src='/cards/empty.svg', alt='Banker card 1')
              img.card-img#cardB2(src='/cards/empty.svg', alt='Banker card 2')
              img.card-img#cardB3(src='/cards/empty.svg', alt='Banker card 3')
        .result-orb
          span#lastOutcome.label 결과
          strong#lastOutcomeValue -

      aside.control-panel
        h2 베팅 현황
        p.note 현재 라운드 기준 사용자 베팅 요약입니다.
        .bet-totals
          .bet-card
            span.label PLAYER
            strong#betPlayerTotal 0
          .bet-card
            span.label BANKER
            strong#betBankerTotal 0
          .bet-card
            span.label TIE
            strong#betTieTotal 0
        .audit
          h3 베팅 상세
          ul#betList

  script(src='/javascripts/baccarat-view.js')
